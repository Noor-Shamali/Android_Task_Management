<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"> <!-- Dynamic background -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Task"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/title_text_color"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"
        android:textColor="@color/label_text_color" />

    <EditText
        android:id="@+id/editTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter task title"
        android:background="@drawable/input_field"
        android:padding="10dp"
        android:textSize="14sp"
        android:textColor="@color/input_text_color"
        android:textColorHint="@color/input_hint_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Description"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/label_text_color" />

    <EditText
        android:id="@+id/editTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter task description"
        android:background="@drawable/input_field"
        android:padding="10dp"
        android:minLines="3"
        android:textSize="14sp"
        android:textColor="@color/input_text_color"
        android:textColorHint="@color/input_hint_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/editDueDateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Date"
            android:backgroundTint="@color/button_primary_color"
            android:textColor="@color/button_text_color"
            android:padding="8dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/editDueTimeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Select Time"
            android:backgroundTint="@color/button_primary_color"
            android:textColor="@color/button_text_color"
            android:padding="8dp"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Priority Level"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/label_text_color" />

    <Spinner
        android:id="@+id/editPrioritySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_style"
        android:padding="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Completion Status"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/label_text_color" />

    <Switch
        android:id="@+id/editCompletionStatusSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mark as Complete"
        android:textSize="14sp"
        android:textColor="@color/switch_text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/saveEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:backgroundTint="@color/button_primary_color"
            android:textColor="@color/button_text_color"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/cancelEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="@color/button_secondary_color"
            android:textColor="@color/button_text_color"
            android:padding="12dp" />
    </LinearLayout>
</LinearLayout>
